{
    "name": "bitexpert/disco",
    "description": "Dependency Injection Container",
    "minimum-stability": "stable",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Stephan Hochd√∂rfer",
            "email": "S.Hochdoerfer@bitExpert.de",
            "homepage": "https://www.bitExpert.de"
        }
    ],
    "require": {
        "php": "^7.4.0",
        "psr/container": "^1.0.0",
        "doctrine/annotations": "^1.3.0",
        "ocramius/proxy-manager": "^2.10.0",
        "bitexpert/slf4psrlog": "^0.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4",
        "phing/phing": "^2.16.0",
        "bitexpert/phing-securitychecker": "^0.4.0",
        "mikey179/vfsstream": "^1.6",
        "phpbench/phpbench": "^0.17.0",
        "bookdown/bookdown": "@dev",
        "tm/tooly-composer-script": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "bitExpert\\Disco\\": "src/bitExpert/Disco"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bitExpert\\Disco\\": [
                "tests/bitExpert/Disco",
                "benchmarks/bitExpert/Disco"
            ]
        }
    },
    "provide": {
        "psr/container-implementation": "^1.0"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "vendor/bin/phpcs --standard=PSR2 src tests",
        "cs-fix": "vendor/bin/phpcbf",
        "test": "vendor/bin/phpunit",
        "coverage": "vendor/bin/phpunit --coverage-clover clover.xml",
        "analyze": "vendor/bin/psalm.phar",
        "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
        "post-update-cmd": "Tooly\\ScriptHandler::installPharTools"
    },
    "extra": {
        "tools": {
            "psalm": {
                "url": "https://api.getlatestassets.com/github/vimeo/psalm/psalm.phar",
                "sign-url": "https://api.getlatestassets.com/github/vimeo/psalm/psalm.phar.asc"
            },
            "phpdocumentor": {
                "url": "http://phpdoc.org/phpDocumentor.phar"
            }
        }
    }
}
